{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "CodeViz",
  "version": "0.1.0",
  "identifier": "com.codeviz.app",
  "build": {
    "beforeDevCommand": "npm run dev:web",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build:web",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "CodeViz - Interactive Code Analysis",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "dialog:allow-open"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "icon": []
  }
}
